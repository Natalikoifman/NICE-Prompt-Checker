{
  "$schema": "https://developer.microsoft.com/en-us/json-schemas/teams/v1.16/MicrosoftTeams.schema.json",
  "manifestVersion": "1.16",
  "version": "1.0.0",
  "id": "{{TEAMS_APP_ID}}",
  "packageName": "com.nice.promptchecker",
  "developer": {
    "name": "NICE Prompt Checker",
    "websiteUrl": "https://github.com/Natalikoifman/NICE-Prompt-Checker",
    "privacyUrl": "https://github.com/Natalikoifman/NICE-Prompt-Checker",
    "termsOfUseUrl": "https://github.com/Natalikoifman/NICE-Prompt-Checker"
  },
  "icons": {
    "color": "color.png",
    "outline": "outline.png"
  },
  "name": {
    "short": "Prompt Checker",
    "full": "NICE Prompt Checker - Survey Question Validator"
  },
  "description": {
    "short": "AI assistant for validating survey prompts",
    "full": "NICE Prompt Checker is an AI-powered assistant that analyzes, validates, and helps improve survey prompts. Get instant feedback on clarity, bias, and effectiveness of your survey questions."
  },
  "accentColor": "#4A90E2",
  "bots": [
    {
      "botId": "{{MICROSOFT_APP_ID}}",
      "scopes": [
        "personal",
        "team",
        "groupchat"
      ],
      "supportsFiles": false,
      "isNotificationOnly": false,
      "commandLists": [
        {
          "scopes": [
            "personal",
            "team",
            "groupchat"
          ],
          "commands": [
            {
              "title": "Check a prompt",
              "description": "Send me any survey prompt to analyze"
            }
          ]
        }
      ]
    }
  ],
  "permissions": [
    "identity",
    "messageTeamMembers"
  ],
  "validDomains": []
}
